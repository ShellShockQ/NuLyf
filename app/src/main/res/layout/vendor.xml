<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/vendorlayout"
    >
<TextView
        android:id="@+id/vendorname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignParentTop="true"
         />
<ImageView
        android:id="@+id/vendorlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
                android:layout_below="@+id/vendorname"
         />
<TextView
        android:id="@+id/vendordetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/vendorlogo"
        android:paddingLeft="45dp" />

<Button
        android:id="@+id/phonebutton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/vendordetail"
        android:background="@drawable/phone" />

    <TextView
        android:id="@+id/phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/vendordetail"
        android:layout_alignBottom="@+id/phonebutton"
        android:autoLink="phone"
        android:paddingLeft="45dp" />
    
<Button
        android:id="@+id/mapbutton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/phonebutton"
        android:background="@drawable/map"
        android:layout_marginTop="10dp"
         />
<TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/phonenumber"
        android:layout_alignBottom="@+id/mapbutton"
        android:autoLink="map"
        android:paddingLeft="45dp" />
  
<Button
         android:background="@drawable/btndone" 
         android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/savedone"
        android:layout_alignParentBottom="true" 
        android:layout_centerInParent="true"
        android:contentDescription="@string/btnDone"
         />
    
</RelativeLayout>
