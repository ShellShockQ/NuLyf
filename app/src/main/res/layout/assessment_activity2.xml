<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:paddingLeft="5dp"
     android:background="@drawable/background">
<TextView
        android:id="@+id/assessmentProgressInAssessmentActivity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
style="@style/appheading"
         />
<TextView
        android:id="@+id/activityAssessment2SubHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activityAssessment2SubHeader"
        android:layout_below="@+id/assessmentProgressInAssessmentActivity2"
       style="@style/appheading"
         />

   <Button
         android:background="@drawable/btnsave" 
         android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/saveBtn"
        android:layout_alignParentBottom="true" 
        android:layout_centerInParent="true"
         />
    <ListView 
        android:layout_width="fill_parent"
        android:id="@+id/selectedailmentlist"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityAssessment2SubHeader" 
        style="@style/appheading"
        
        />


</RelativeLayout>